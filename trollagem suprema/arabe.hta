<html>
<head>
  <title>?????</title>
  <HTA:APPLICATION
    APPLICATIONNAME="ChaosArabic"
    BORDER="none"
    CAPTION="no"
    SHOWINTASKBAR="no"
    SINGLEINSTANCE="no"
    WINDOWSTATE="normal">
  <script language="VBScript">
    Dim x, y, dx, dy
    Randomize
    x = Int((Screen.Width - 300) * Rnd)
    y = Int((Screen.Height - 100) * Rnd)
    dx = 6
    dy = 6

    Sub Window_OnLoad()
      window.resizeTo 300, 100
      MoveWindow
    End Sub

    Sub MoveWindow()
      SetInterval "DeslizarJanela", 10
    End Sub

    Sub DeslizarJanela()
      x = x + dx
      y = y + dy
      If x < 0 Or x > (Screen.Width - 300) Then dx = -dx
      If y < 0 Or y > (Screen.Height - 100) Then dy = -dy
      window.moveTo x, y
    End Sub
  </script>
</head>
